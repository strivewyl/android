<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:gravity="center_vertical">
    
      <TextView android:id="@+id/class_hour_name"
          android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:singleLine="true"
          android:ellipsize="end"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/textview_bottom"
          />
       <TextView android:id="@+id/start_time"
          android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:singleLine="true"
          android:ellipsize="end"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/textview_bottom"
          />
        <TextView android:id="@+id/end_time"
          android:layout_width="0dp"
          android:layout_height="fill_parent"
          android:singleLine="true"
          android:ellipsize="end"
          android:layout_weight="1"
          android:gravity="center"
          android:background="@drawable/textview_bottom"
          />
        <ImageButton 
            android:id="@+id/btn_classhour_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/edit"
            android:contentDescription="@string/classhour_edit_item_update"
            />
        <ImageButton 
            android:id="@+id/btn_classhour_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/delete"
            android:contentDescription="@string/classhour_edit_item_delete"
            />
</LinearLayout>